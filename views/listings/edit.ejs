<div class="container py-4">
    <div class="row" >
        <div class="col-md-12">
            <div class="mb-4">
                <a href="/listings/<%-listing.id %>" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-2"></i>
                    <span>Back</span>
                </a>
            </div>
            <div class="py-4">
                <h3 class="mb-4 display-4">Edit Listing</h3>
                
                <form action="/listings/<%- listing.id %>/edit?_method=PUT" method="POST" novalidate class="needs-validation"enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="form-label text-muted small"> Title</label>
                        <input type="text" class="form-control" id="title" name="listing[title]" value=<%- listing.title %> 
                               placeholder="Text input" required>
                        <div class="valid-feedback">
                            Title Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a Valid Title
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="description" class="form-label text-muted small">Description </label>
                        
                        <textarea class="form-control border-1" id="description"     name="listing[description]" rows="4" 
                                  placeholder="I've typed something here" required><%- listing.description %></textarea>
                        <div class="valid-feedback">
                            Description Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a Valid Description
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="formFile" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="formFile" name="listing[image]"  >
                    </div>


                    <div class="row">

                        <div class="mb-4 col-md-4">
                            <label class="form-label text-muted small">Country</label>
                            <input class="form-control border-1" name="listing[country]" placeholder="India" type="'text" required value=<%- listing.country %> >
                            <div class="valid-feedback">
                                Country Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a Valid Country
                            </div>
                            
                        </div>
                        
                        <div class="mb-4 col-md-4">
                            <label class="form-label text-muted small">Price per night</label>
                            <div class="input-group">
                                <span class="input-group-text border-1">â‚¹</span>
                                <input type="number" class="form-control border-1" name="listing[price]" placeholder="100" min="1" required value=<%- listing.price %> >
                                <div class="valid-feedback">
                                    Price Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Enter a Valid Price
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-muted small">Location</label>
                        <input type="text" class="form-control border-1" name="listing[location]" placeholder="City name" required value=<%- listing.location %> >
                        <div class="valid-feedback">
                            Location Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a Valid Location
                        </div>
                    </div>

                   <div class="mt-2">
                                    <button type="submit" class="btn btn-primary px-3 ">
                                        Edit
                                        <i class="fas fa-arrow-right ms-2"></i>
                                    </button>
                                </div>

                </form>
            </div>
        </div>
    </div>
</div>
